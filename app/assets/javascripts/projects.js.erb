var generate_key = function(len){
  var s = '';
  while (s.length < len)
  s += Math.random().toString(36).substr(2, len);
  return s.substr(0, len);
};

$(function(){
  
  $("#droparea").on("drop", function(e){
    var file = e.originalEvent.dataTransfer.files[0],
        s3Data = new FormData();
    s3Data.append("key", "things/"+generate_key(36)+"/"+file.name);
    s3Data.append("AWSAccessKeyId", "<%= ENV['AWS_ACCESS_KEY_ID'] %>");
    s3Data.append("acl", "public-read");
    s3Data.append("policy", "<%= Thing.s3_policy %>");
    s3Data.append("signature", "<%= Thing.s3_signature %>");
    s3Data.append("Content-Type", file.type);
    s3Data.append("file", file);
    return $.ajax({
      url: "https://<%= S3_BUCKET %>.s3.amazonaws.com/",
      data: s3Data,
      cache: false,
      contentType: false,
      processData: false,
      type: "POST",
      success: function() {
        console.log("success");
      },
      error: function(){
        console.log("error!");
      },
      progress: function(e) {
        console.log("progress");
      },
      complete: function() {
        console.log("complete");
      }
    });
  });

});
