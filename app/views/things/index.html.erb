<%= render "header" %>

<div id="things">
    <% @things.each do |thing| %>
        <%= link_to thing do %>
            <div class="thing" data-content-type="<%= thing.content_type %>">
                <div class="center_within">
                    <% if thing.file_is_image? %>
                        <img class="image" src="<%= thing.imgix_file_url %>?w=280&amp;h=280">
                    <% else %>
                        <div class="unknown">
                            <%= thing.name %>
                        </div>
                    <% end %>
                </div>
            </div>
        <% end %>
    <% end %>
</div>

<% if user_signed_in? %>
    <%= render "dropzone" %>

    <div id="user_controls">
        <%= link_to 'New', new_thing_path %>
    </div>
<% end %>