<%= render "header" %>

<% if @thing.file_url? %>
    <div><a href="<%= @thing.file_url %>"><%= @thing.file_url %></a></div>
<% end %>

<div class="body">
    <%= simple_format @thing.body %>
</div>

<% if user_signed_in? %>
    <%= link_to 'Edit', edit_thing_path(@thing) %>
    <%= link_to 'Delete', @thing, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>